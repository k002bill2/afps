{
  "permissions": {
    "allowedTools": [
      "Read",
      "Write(src/**)",
      "Write(components/**)",
      "Write(docs/**)",
      "Edit(src/**)",
      "Edit(components/**)",
      "Edit(docs/**)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(expo *)",
      "Bash(eas *)",
      "Grep",
      "Glob"
    ],
    "deny": [
      "Read(.env*)",
      "Write(.env*)",
      "Edit(.env*)",
      "Read(google-services.json)",
      "Write(google-services.json)",
      "Bash(sudo *)",
      "Bash(rm -rf *)",
      "Bash(killall *)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run type-check 2>&1 | head -20"
          }
        ]
      },
      {
        "matcher": "Write(*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run type-check 2>&1 | head -20"
          }
        ]
      },
      {
        "matcher": "Edit(*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint -- --fix --quiet || true"
          }
        ]
      },
      {
        "matcher": "Edit(*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint -- --fix --quiet || true"
          }
        ]
      }
    ]
  },
  "settings": {
    "autoApprove": {
      "tools": [
        "Read",
        "Grep",
        "Glob",
        "Bash(git status)",
        "Bash(git diff *)",
        "Bash(git log *)",
        "Bash(npm run *)",
        "Bash(expo start *)"
      ]
    }
  }
}
